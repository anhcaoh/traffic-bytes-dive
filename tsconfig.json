{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/features/*": ["./features/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "hooks/usePokemon/usePokemon.test.js", "pages/_app.js"],
  "exclude": ["node_modules"]
}
